@using EntityLayer.Concrete
@model List<Writer>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@{int sayac = 0; }
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Adı</th>
        <th>Soyadı</th>
        <th>Mail</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>

    @foreach (var item in Model)
    {
        sayac++;
        <tr>
            <th>@sayac</th>
            <td>@item.Name</td>
            <td>@item.Surname</td>
            <td>@item.Mail</td>
            <td><a href="/Category/DeleteWriter/@item.ID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Category/EditWriter/@item.ID" class="btn btn-success">Güncelle</a></td>

        </tr>
    }
</table>
<a href="/Category/AddWriter/" class="btn btn-info">Yeni Kategori Ekle</a>

