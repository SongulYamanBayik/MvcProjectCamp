@model EntityLayer.Concrete.Category
@{
    ViewBag.Title = "EditCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

<!DOCTYPE html>
<div class="container col-10">

    @using (Html.BeginForm("EditCategory", "Category", FormMethod.Post))
    {
        @Html.Label("ID")
        @Html.TextBoxFor(x => x.ID, new { @class = "form-control" })
        <br />
        @Html.Label("Kategori Adı")
        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
        <br />
        @Html.Label("Açıklama")
        @Html.TextAreaFor(x => x.Description, new { @class = "form-control" })
        <br />
        @Html.Label("Kategori Rengi")
        <br />
        @Html.TextBoxFor(x => x.Color, new { @class = "form-control-color", @type = "color"})
        <br />
        <button class="btn btn-info mt-3">Kaydet</button>

    }
</div>



